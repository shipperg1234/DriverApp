<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/outer_layout"
    tools:context="in.co.theshipper.www.shipper_driver.BillDetails">
    <LinearLayout
        style="@style/vertical_LL">
        <LinearLayout
         style="@style/horizontal_LL.sm.8">
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fillViewport="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/medium_text_size"
                    android:gravity="center"
                    android:id="@+id/crn_no"
                    android:text="crnno"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/vehicle_name"
                    android:text="Vehicle:"
                    android:layout_marginTop="61dp"
                    android:layout_below="@+id/total_fare"
                    android:layout_toRightOf="@+id/textView7"
                    android:layout_marginLeft="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/total_distance"
                    android:text="Distance:"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/vehicle_name"
                    android:layout_alignLeft="@+id/vehicle_name"
                    android:layout_alignStart="@+id/vehicle_name"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/total_time"
                    android:text="Time:"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/total_distance"
                    android:layout_alignLeft="@+id/total_distance"
                    android:layout_alignStart="@+id/total_distance"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="13sp" />
                <TextView

                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/large_text_size"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/total_fare"
                    android:text="Fare:"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/crn_no"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="44dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle:"
                    android:id="@+id/textView"
                    android:layout_alignTop="@+id/vehicle_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_above="@+id/total_distance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance:"
                    android:id="@+id/textView7"
                    android:layout_alignTop="@+id/total_distance"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignBottom="@+id/total_distance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:id="@+id/textView8"
                    android:layout_alignTop="@+id/total_time"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="13sp" />
            </RelativeLayout>
           </ScrollView>
        </LinearLayout>
        <LinearLayout
            style="@style/horizontal_LL.sm.1"
            android:gravity="center">
             <Button
                 style="@style/normal_button"
                 android:text="@string/button_generate_bill"
                 android:id="@+id/generate_bill"
                 android:visibility="gone"
                 />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
